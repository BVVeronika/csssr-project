.level
	margin-top 32 px
		
	&__range
		-webkit-appearance none
		width 100%
		height 2px
		
		&::-webkit-slider-runnable-track
			width 100%
			height 2px
			
			cursor pointer
			
			background #000
			
		&::-webkit-slider-thumb
			position relative
			top -17px
			
			margin-right -7px
			margin-left -7px

			width 0
			height 0
			
			cursor pointer
			
			sprite $triangle
			
			-webkit-appearance none
			
		&::-moz-range-track
			width 100%
			height 2px
			
			cursor pointer
			
			background #000
			
		&::-moz-range-thumb
			border none
			background none
			sprite $triangle
			
			height 30px

		&::-ms-track
			width 100%
			height 2px
			
			cursor pointer
			
			background #000
			
		&::-ms-thumb
			position relative
			top -17px
			
			margin-right -7px
			margin-left -7px

			width 0
			height 0
			
			cursor pointer
			
			sprite $triangle
			
			-webkit-appearance none
				
	&__description
		position relative
		
		width 100%
		
		font-size 10px

@media (max-width: 620px)
	.box__text
		display none